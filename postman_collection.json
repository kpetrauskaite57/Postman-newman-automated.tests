	"item": [
		{
			"name": "Create a New Todo",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const baseTodo = 'Todo';\r",
							"const uniqueTitle = baseTodo + Date.now();\r",
							"\r",
							"pm.collectionVariables.set('uniqueTitle', uniqueTitle);\r",
							"pm.collectionVariables('uniqueDescription', uniqueTitle + \"miestas\");\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"let jsonData = pm.response.json();\r",
							"let id = jsonData.id;\r",
							"let requestJsonData = pm.request.body.raw;\r",
							"let requestData = JSON.parse(requestJsonData);\r",
							"\r",
							"// Set the collection variable\r",
							"\r",
							" pm.collectionVariables.set(\"createdId\", id);\r",
							"\r",
							" pm.collectionVariables.set(\"title\", requestData.title);\r",
							"\r",
							"pm.collectionVariables.set(\"description\", requestData.description);\r",
							"\r",
							"pm.test(\"Status code is 201\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"pm.test(\"Response is under 300ms\", () => {\r",
							"    pm.expect(pm.responseTime).to.be.below(300)\r",
							"});\r",
							"pm.test(\"Response has id\", function () {\r",
							"    pm.expect(jsonData).to.have.property(\"id\");\r",
							"    pm.collectionVariables.set(\"createdId\", jsonData.id);\r",
							"});\r",
							"pm.test(\"Created todo exists and has correct title and description\", function () {\r",
							"    pm.expect(jsonData.title).to.eql(pm.variables.get(\"uniqueTitle\"));\r",
							"    pm.expect(jsonData.description).to.eql(pm.variables.get(\"uniqueDescription\"));\r",
							"});\r",
							"\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"title\": \"{{uniqueTitle}}\",\r\n  \"description\": \"{{uniqueDescription}}\"\r\n}\r\n\r\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://localhost:3000/todos",
